{
  "filters": {
    "comments": true,
    "whitelist": true
  },
  "rules": {
    "preset-ja-technical-writing": {
      "sentence-length": {
        "severity": "warning"
      },
      "max-kanji-continuous-len": {
        "severity": "warning"
      },
      "no-mix-dearu-desumasu": {
        "preferInHeader": "",
        "preferInBody": "ですます",
        "preferInList": "である",
        "strict": false
      }
    },
    "@textlint-ja/no-insert-dropping-sa": true,
    "abbr-within-parentheses": true,
    "footnote-order": true,
    "general-novel-style-ja": {
      "chars_leading_paragraph": false,
      "max_arabic_numeral_digits": false
    },
    "ja-hiragana-fukushi": {
      "severity": "warning"
    },
    "ja-hiragana-hojodoushi": {
      "severity": "warning"
    },
    "ja-hiragana-keishikimeishi": {
      "severity": "warning"
    },
    "ja-unnatural-alphabet": true,
    "textlint-rule-prefer-tari-tari": true,
    "@textlint-ja/textlint-rule-no-synonyms": true,
    "@textlint-ja/textlint-rule-no-filler": true,
    "textlint-rule-ja-no-orthographic-variants": true,
    "textlint-rule-ja-joyo-or-jinmeiyo-kanji": true,
    "textlint-rule-no-hoso-kinshi-yogo": true,
    "textlint-rule-ja-no-inappropriate-words": true,
    "ng-word": true,
    "no-mixed-zenkaku-and-hankaku-alphabet": true,
    "period-in-list-item": true,
    "prefer-tari-tari": true,
    "preset-ja-spacing": true,
    "preset-jtf-style": true,
    "prh": false,
    "spellcheck-tech-word": true
  }
}
